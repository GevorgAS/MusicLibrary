<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/two_line_list_height"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/musicListIcon"
            android:layout_width="@dimen/two_line_list_rounded_icon_width"
            android:layout_height="@dimen/two_line_list_rounded_icon_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_library_music" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/musicName"
            style="@style/ListPrimaryTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/list_item_left_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="asdfjkasbdjasnjasnjasasdasdndsasdasdasdsdasdsdsdsdsdsdsdsd" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/authorOfMusic"
            style="@style/ListSecondaryTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/musicName"
            android:layout_marginLeft="@dimen/list_item_left_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="55555555555" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/albumName"
            style="@style/ListSecondaryTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/musicName"
            android:layout_toRightOf="@+id/authorOfMusic"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="545454555555555555555555545" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        style="?android:attr/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_below="@+id/layoutContainer"
        android:layout_marginLeft="@dimen/list_item_left_margin"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/colorTextSecondary" />

</RelativeLayout>

